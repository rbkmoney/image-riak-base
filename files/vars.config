%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et

%% Platform-specific installation paths
{platform_bin_dir,  "/usr/sbin"}.
{platform_data_dir, "/var/lib/riak"}.
{platform_etc_dir,  "/etc/riak"}.
{platform_lib_dir,  "/usr/lib/riak/lib"}.
{platform_log_dir,  "/var/log/riak"}.
{platform_gen_dir,  "{{platform_data_dir}}/releases/{{release_version}}"}.

%%
%% etc/app.config
%%
{web_ip,            "0.0.0.0"}.
{web_port,          8098}.
{cluster_manager_ip,    "0.0.0.0"}.
{cluster_manager_port,  9080}.
{handoff_port,      8099}.
{handoff_ip,        "0.0.0.0"}.
{pb_ip,             "0.0.0.0"}.
{pb_port,           8087}.
{storage_backend,   "bitcask"}.
{sasl_error_log,    "{{platform_log_dir}}/sasl-error.log"}.
{sasl_log_dir,      "{{platform_log_dir}}/sasl"}.
{repl_data_root,    "{{platform_data_dir}}/riak_repl/"}.

%% lager
{console_log_default, file}.

%%
%% etc/vm.args
%%
{node,         "riak@127.0.0.1"}.
{crash_dump,   "{{platform_log_dir}}/erl_crash.dump"}.

%%
%% bin/riak
%%
{runner_script_dir,  "{{platform_bin_dir}}"}.
{runner_base_dir,    "/usr/lib/riak"}.
{runner_etc_dir,     "{{platform_etc_dir}}"}.
{runner_log_dir,     "{{platform_log_dir}}"}.
{runner_lib_dir,     "{{runner_base_dir}}/lib"}.
{runner_patch_dir,   "{{runner_base_dir}}/lib/basho-patches"}.
{pipe_dir,           "/tmp/riak/"}.
{runner_user,        "riak"}.
{runner_wait_process, "riak_core_node_watcher"}.
{runner_ulimit_warn, 65536}.
